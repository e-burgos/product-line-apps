{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@optical-system-app/*": ["apps/optical-system/src/*"],
      "@product-manager-app/*": ["apps/product-manager/src/*"],
      "@product-line/datatable": ["libs/datatable/src/index.ts"],
      "@product-line/dexie": ["libs/dexie/src/index.ts"],
      "@product-line/features": ["libs/features/src/index.ts"],
      "@product-line/integrations": ["libs/integrations/src/index.ts"],
      "@product-line/shell": ["libs/shell/src/index.ts"],
      "@product-line/ui": ["libs/ui/src/index.ts"],
      "@tucu-ui": ["ui/tucu-ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
